# ===========================================
# Копировать в .env и заполнить реальными значениями.
# НЕ коммитить .env в git.
# ===========================================

# --- PostgreSQL (для n8n и editor_bot) ---
POSTGRES_USER=parser_user
POSTGRES_PASSWORD=CHANGE_ME_STRONG_PASSWORD
POSTGRES_DB=parser_db

# --- n8n ---
N8N_HOST=n8n.neurascope.pro
N8N_PROTOCOL=https
N8N_PORT=5678

# --- Userbot (Telethon, аккаунт @riskerlb) ---
TELEGRAM_API_ID=          # число, от my.telegram.org
TELEGRAM_API_HASH=         # строка от my.telegram.org
TELEGRAM_SESSION_STRING=   # строка сессии (скрипт scripts/generate_session.py)
SOURCE_CHANNEL=            # username канала-источника (например -1001234567890 или @channel)
N8N_WEBHOOK_URL=           # https://n8n.neurascope.pro/webhook/xxx или http://n8n:5678/webhook/xxx

# --- Editor Bot (@Neuralookerbot) ---
BOT_TOKEN=                 # токен бота от @BotFather
EDITOR_CHAT_ID=            # Telegram user ID редактора (число)
TARGET_CHANNEL_ID=         # ID целевого канала для публикации (например -1001234567890)
EDITOR_BOT_WEBHOOK_PATH=   # путь для POST от n8n, например /incoming/post
EDITOR_BOT_WEBHOOK_TOKEN=  # секрет для заголовка Authorization: Bearer (n8n передаёт тот же токен)
DATABASE_URL=              # postgresql://parser_user:PASSWORD@postgres:5432/parser_db

# --- OpenAI (для n8n workflow) ---
OPENAI_API_KEY=            # ключ OpenAI (в n8n можно задать отдельно)

# --- VK (заготовка, пока не используется) ---
VK_ENABLED=false
VK_TOKEN=
VK_GROUP_ID=
